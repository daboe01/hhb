		</foreach>
		<foreach:wlPropertiesDG.WLProps>
				<tr>
					<td><var:Name></td>
					<td><var:Parameter edittype=popup lookup="diagnosenWerteliste.Name@DiagnoseID"></td>
				</tr>
		</foreach>
		</table>
</td>
<td valign=top>
